<Window x:Class="ExBtnCentre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExBtnCentre"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Up left" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,40,40" Width="40" Height="40"/>
        <Button Content="Up right" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40,0,0,40" Width="40" Height="40"></Button>
        <Button Content="Down left" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,40,40,0" Width="40" Height="40"></Button>
        <Button Content="Down right" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40,40,0,0" Width="40" Height="40"></Button>
    </Grid>
</Window>
